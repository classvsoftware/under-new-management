{
  "name": "Under New Management",
  "version": "0.0.1",
  "description": "Detect when your installed Chrome extensions have changed owners.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "permissions": ["alarms", "management", "storage"],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
